<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ProfileMainActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme" />

    <TextView
        android:id="@+id/title3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="#009688"
        android:fontFamily="@font/raleway_extrabold_italic"
        android:text="StudyGround"
        android:textAlignment="center"
        android:textColor="#F6FDFD"
        android:textSize="48sp" />

    <TextView
        android:id="@+id/welcome"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="0dp"
        android:fontFamily="@font/medium"
        android:text=".."
        android:textAlignment="center"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/txtmaterias"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"/>


    <ImageButton
        android:id="@+id/teachButton"
        android:layout_width="245dp"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:layout_marginLeft="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="0dp"
        android:layout_marginVertical="@dimen/activity_vertical_margin"
        android:adjustViewBounds="false"
        android:backgroundTint="#009688"
        android:cropToPadding="false"
        android:paddingLeft="20dp"
        android:scaleType="centerInside"
        app:srcCompat="@drawable/profesor1" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:layout_marginTop="0dp"
        android:fontFamily="@font/medium"
        android:text="Enseñar"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="24sp" />

    <ImageButton
        android:id="@+id/studyButton"
        android:layout_width="245dp"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:layout_marginLeft="0dp"
        android:layout_marginVertical="@dimen/activity_vertical_margin"
        android:layout_gravity="center_horizontal"
        android:backgroundTint="#009688"
        app:srcCompat="@drawable/grupodeestudio" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="243dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginVertical="@dimen/activity_vertical_margin"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        android:layout_gravity="center_horizontal"
        android:fontFamily="@font/medium"
        android:text="Buscar compañeros para estudiar"
        android:textAlignment="center"
        android:textColor="#050505"
        android:textSize="24sp" />

</LinearLayout>