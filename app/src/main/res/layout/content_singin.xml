<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".SinginActivity"
    tools:showIn="@layout/activity_singin">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#009688"
        android:fontFamily="@font/raleway_extrabold_italic"
        android:text="StudyGround"
        android:textAlignment="center"
        android:textColor="#F5F8F8"
        android:textSize="48sp" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="171dp"
        android:background="#009688"
        android:paddingBottom="10dp"
        app:srcCompat="@drawable/logocarga" />

    <TextView
        android:id="@+id/subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/medium"
        android:text="Registro"
        android:textAlignment="gravity"
        android:textColor="#009688"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/txtemail"
        android:layout_width="342dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:ems="10"
        android:fontFamily="@font/medium"
        android:hint="Correo Electrónico"
        android:inputType="textEmailAddress"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/txtpwd"
        android:layout_width="343dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:ems="10"
        android:fontFamily="@font/medium"
        android:hint="Contraseña"
        android:inputType="textPassword"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/txtcPwd"
        android:layout_width="344dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:ems="10"
        android:fontFamily="@font/medium"
        android:hint="Repetir contraseña"
        android:inputType="textPassword"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/txtname"
        android:layout_width="344dp"
        android:layout_height="38dp"
        android:layout_marginLeft="30dp"
        android:ems="10"
        android:fontFamily="@font/medium"
        android:hint="Nombre completo"
        android:inputType="textPersonName"
        android:textSize="14sp" />

    <Spinner
        android:id="@+id/spinuniversidad"
        android:layout_width="match_parent"
        android:layout_height="27dp"
        android:layout_marginLeft="30dp"
        android:entries="@array/universidad" />

    <Spinner
        android:id="@+id/spinprograma"
        android:layout_width="344dp"
        android:layout_height="27dp"
        android:layout_marginLeft="30dp"
        android:entries="@array/programa" />

    <Spinner
        android:id="@+id/spinmaterias"
        android:layout_width="344dp"
        android:layout_height="27dp"
        android:layout_marginLeft="30dp"
        android:entries="@array/materias"
        android:spinnerMode="dropdown" />

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="wrap_content"
        android:layout_height="17dp"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="5dp"
        android:text="Acepto los Términos y Condiciones" />

    <Button
        android:id="@+id/buttonRegistro"
        android:layout_width="236dp"
        android:layout_height="41dp"
        android:layout_marginLeft="85dp"
        android:layout_marginTop="5dp"
        android:backgroundTint="#009688"
        android:text="Registrarme"
        android:textColor="#FCFFFFFF" />

    <Button
        android:id="@+id/buttonReturn"
        android:layout_width="204dp"
        android:layout_height="25dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="5dp"
        android:background="@android:color/transparent"
        android:text="Ya tengo una cuenta" />

</LinearLayout>