<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".viajes.ConductorActivity">

    <TextView
        android:id="@+id/colectivoEIA"
        android:layout_width="260dp"
        android:layout_height="52dp"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:text="ERES CONDUCTOR"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="30sp" />


    <Spinner
        android:id="@+id/spinnerOrigen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:entries="@array/rutasC" />

    <Spinner
        android:id="@+id/spinnerDestino"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:entries="@array/rutasC" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="140dp"
        android:layout_height="140dp" />


    <EditText
        android:id="@+id/et_mostrar_hora_picker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="70dp"
        android:ems="10"
        android:hint="HH:MM"
        android:inputType="time" />

    <ImageButton
        android:id="@+id/ib_obtener_hora"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="16dp"
        android:scaleType="fitCenter"
        android:src="@drawable/check" />

    <EditText
        android:id="@+id/et_costo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="70dp"
        android:ems="10"
        android:inputType="numberDecimal"
        android:text="$" />

    <Button
        android:id="@+id/btnRegistrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Subir ruta" />



</LinearLayout>